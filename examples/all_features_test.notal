PROGRAM AllFeaturesTest
{ Comprehensive test of all three new features }
KAMUS
    { Record types }
    type Employee: <
        id: integer,
        name: string,
        salary: real,
        department: string
    >
    
    type Address: <
        street: string,
        city: string,
        zipCode: integer
    >
    
    { Enum types }
    type Department: (HR, IT, Finance, Marketing, Sales)
    type Priority: (Low, Medium, High, Critical)
    type Status: (Active, Inactive, Pending, Suspended)
    
    { Regular variables with custom types }
    emp1: Employee
    empDept: Department
    taskPriority: Priority
    userStatus: Status
    homeAddress: Address
    
    { Constrained variables }
    employeeAge: integer | employeeAge >= 18 and employeeAge <= 70
    salary: real | salary >= 1000.0 and salary <= 100000.0
    workHours: integer | workHours >= 1 and workHours <= 60
    rating: real | rating >= 0.0 and rating <= 10.0
    
    { Regular variables }
    counter: integer
    message: string
    
ALGORITMA
    counter <- 1
    message <- 'All features implemented successfully!'
    employeeAge <- 30
    salary <- 50000.0
    workHours <- 40
    rating <- 8.5
    
    output('Test completed: ', message)
    output('Counter: ', counter)
    output('Employee age: ', employeeAge)
    output('Salary: ', salary)
    output('Work hours: ', workHours)
    output('Rating: ', rating)