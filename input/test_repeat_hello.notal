Program RepeatHello;

KAMUS
  n : integer;
  i : integer; // Loop counter

ALGORITMA
  output("Enter a number (n):");
  input(n);

  if (n > 0) then // Ensure loop runs only for positive n
    for i <- 1 to n do
      output("Hello");
    endfor
  else
    output("N is not positive, no Hellos for you!");
  endif
