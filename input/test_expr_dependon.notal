Program TestExpressionsAndDependOn;

KAMUS
  a, b, c, result, choice : integer;
  isReady : boolean;

ALGORITMA
  a <- 10;
  b <- 5;
  c <- 2;

  result <- a + b * c; // Expected: 10 + (5*2) = 20
  output("Result of a + b * c: ", result);

  result <- (a + b) * c; // Expected: (10+5)*2 = 30
  output("Result of (a + b) * c: ", result);

  isReady <- (a > b) AND (c < b) OR (a = 10); // Expected: (true AND true) OR true = true
  output("isReady: ", isReady); // Expected: 1 (if boolean prints as int)

  output("Enter a choice (1, 2, or 3):", INLINE)
  input(choice);

  depend on (choice)
    case 1 : output("You chose one.");
    case 2 : output("You chose two.");
    case 3 :
      result <- choice * 100;
      output("You chose three, result is now: ", result);
    otherwise :
      output("Invalid choice.");

END.
